#include<iostream>
using namespace std;
int n;
void display(int *a)
{ cout<<"\n";
  for(int i=1;i<=n;i++)
  { cout<<a[i]<<" ";}}
void merge(int *a,int l,int h,int m)
{ int n1,n2;
  n1=m-l+1;
  n2=h-m;
  int la[n1+1],ra[n2+1];
  la[n1+1]=-100000000;
  ra[n2+1]=-100000000;
  int i=1,j=1,k=l;
  while(i<=n1)
  { la[i]=a[l+i-1];
    i++;}
  while(j<=n2)
  { ra[j]=a[j+m];
    j++;}
  i=1; j=1; 
  while(k<=h)
  { if(la[i]<ra[j])
    { a[k]=la[i];
      i++;}
    else
    { a[k]=ra[j];
      j++;}
    k++;}
  display(a);}
void mergesort(int *a,int l,int h)
{ int m;
  if(l<h)
  { m=((l+h)/2);
    mergesort(a,l,m);
    mergesort(a,m+1,h);
    merge(a,l,h,m);}}
int main()
{ int a[10];
  cout<<"\nEnter the size of the array: ";
  cin>>n;
  cout<<"\nEnter the elements: ";
  for(int i=1;i<=n;i++)
  { cin>>a[i];}
  mergesort(a,1,n);
  display(a);
  return 0;}
