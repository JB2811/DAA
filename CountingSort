#include<iostream>
using namespace std;
int n;
int *b;
void display(int *a)
{ cout<<"\n";
  for(int i=1;i<=n;i++)
  { cout<<a[i]<<" ";}}
void countingsort(int *a,int k)
{ cout<<"c";
  int c[4];
  cout<<"c";
  int i,j;
  for(i=0;i<k;i++)
  { cout<<"c";
    c[i]=0;}
  cout<<"c";
  for(j=1;j<=n;j++)
  { c[a[j]]=c[a[j]]+1;}
  for(i=1;i<k;i++)
  { c[i]=c[i]+c[i-1];}
  for(i=n;i>0;i--)
  { b[c[a[j]]]=a[j];
    c[a[j]]=c[a[j]]-1;}}
int main()
{ int a[10],k;
  int *b;
  cout<<"\nEnter the size of the array: ";
  cin>>n;
  cout<<"\nEnter the elements: ";
  for(int i=1;i<=n;i++)
  { cin>>a[i];}
  cout<<"\nk: ";
  cin>>k;
  display(a);
  countingsort(a,k);
  display(b);
  return 0;}
